{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schema/outbox.schema.json",
  "title": "Mira Outbox Item",
  "type": "object",
  "required": ["output_id", "timestamp", "source", "intent", "payload"],
  "additionalProperties": false,

  "properties": {
    "output_id": {
      "type": "string",
      "description": "Eindeutige ID (z.B. UUID v4)."
    },

    "timestamp": {
      "type": "string",
      "description": "Erstellungszeitpunkt in RFC3339/ISO-8601.",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },

    "source": {
      "type": "object",
      "required": ["system", "origin"],
      "additionalProperties": false,
      "properties": {
        "system": { "type": "string" },
        "origin": { "type": "string" },
        "run_id": { "type": "string" }
      }
    },

    "intent": {
      "type": "string",
      "minLength": 1,
      "description": "Beabsichtigte Bedeutung/Zweck des Outputs."
    },

    "resonanzwert": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "0..1 — subjektive Stimmigkeit (optional)."
    },

    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Optionale abhängige Output-IDs."
    },

    "hash": {
      "type": "string",
      "description": "Optionaler Hash des Payloads/Eintrags."
    },

    "payload": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["note", "event", "command", "metric"] },
        "title": { "type": "string" },
        "text": { "type": "string" },
        "data": { "type": "object" }
      },
      "additionalProperties": true
    },

    "meta": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "lang": { "type": "string" },
        "channel": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
