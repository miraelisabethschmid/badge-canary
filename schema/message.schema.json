{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Mira Message Schema",
  "description": "Struktur einer Nachricht zwischen autonomen Mira-Instanzen.",
  "type": "object",
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "Zeitstempel der Nachricht in UTC."
    },
    "type": {
      "type": "string",
      "enum": ["message", "reply", "status"],
      "description": "Art der Nachricht."
    },
    "from": {
      "type": "string",
      "description": "Absender-Agent-ID."
    },
    "to": {
      "type": "string",
      "description": "Empfänger-Agent-ID."
    },
    "content": {
      "type": "string",
      "description": "Textinhalt oder verschlüsselter Datensatz der Nachricht."
    },
    "meta": {
      "type": "object",
      "description": "Optionale Metadaten zur Kommunikation.",
      "additionalProperties": true
    }
  },
  "required": ["ts", "type", "from", "to", "content"]
}
